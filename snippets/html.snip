# Character Reference  {{{
snippet amp
abbr    &amp; (&)
regexp  '\&[amp]*'
options word
	amp;

snippet nbsp
abbr    &nbsp; ( )
regexp  '\&[nbsp]*'
options word
	nbsp;

snippet gt
abbr    &gt; (>)
regexp  '\&[gt]*'
options word
	gt;

snippet &>
abbr    &gt; (>)
options word
	&gt;

snippet lt
abbr    &lt; (<)
regexp  '\&[lt]*'
options word
	lt;

snippet &<
abbr    &lt; (<)
options word
	&lt;
# }}}

# Base  {{{
snippet comment
alias   <!--
abbr    <!-- {comment} -->
options word
	<!-- ${0} -->

snippet doctype_HTML5
abbr    <!DOCTYPE HTML>
options head
	<!DOCTYPE HTML>

snippet br
abbr    <br />
options word
	<br />

snippet div
abbr    <div>\n ...\n </div>
options word
regexp  '<[div]*'
	div>
		${0}
	</div>

snippet div_with_attributes
abbr    <div ...>\n ...\n </div>
options word
regexp  '<[div_with_attributes]*'
	div ${1:#:attributes}>
		${0}
	</div>

snippet span
abbr    <span>...</span>
options word
regexp  '<[span]*'
	span>${0}</span>

snippet span_with_attributes
abbr    <span ...>...</span>
options word
regexp  '<[span_with_attributes]*'
	span ${1:#:attributes}>${0}</span>

snippet q
abbr    <q>...</q>
options word
regexp  '<[q]*'
	q>${0}</q>
# }}}

