# Script  {{{
snippet script
abbr    <script>\n ...\n </script>
options word
regexp  '<[script]*'
	script>
		${0}
	</script>

snippet script_charset
abbr    <script charset="utf-8">\n ...\n </script>
options word
regexp  '<[script_charset]*'
	script charset="utf-8">
		${0}
	</script>

snippet script_src
abbr    <script src="{source}"></script>
options word
regexp  '<[script_src]*'
	script src="${1:#:source}"></script>
# }}}
